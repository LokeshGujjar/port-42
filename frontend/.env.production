# üåê Port42 Frontend Production Environment
# Copy this file to frontend/.env.production and update values

# API Configuration
VITE_API_BASE_URL=https://api.your-domain.com
VITE_API_VERSION=v1

# WebSocket Configuration
VITE_SOCKET_URL=https://api.your-domain.com

# Application Configuration
VITE_APP_NAME=Port42
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Cyberpunk Learning Platform

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Features
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true

# Performance
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# CDN Configuration (optional)
VITE_CDN_BASE_URL=https://cdn.your-domain.com

# Social Features
VITE_ENABLE_SOCIAL_SHARING=true
VITE_TWITTER_HANDLE=@port42_platform

# Debug (set to false in production)
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false
